
@{
    ViewBag.Title = "Employees";
}

<div class="main-content-inner" ng-controller="EmployeeController">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li class="active">Management of Employees</li>
        </ul><!-- /.breadcrumb -->
    </div>

    <div class="page-content">
        <div class="nav-search pull-right" id="nav-search">
            <div class="col-md-9" style="margin-top: 10px;">
                <button type="button" class="btn btn-info" ng-click="showModal(0)">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Add Employee
                </button>
            </div>
        </div><!-- /.nav-search -->
        <h1>
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Management of Employees
            </small>
        </h1>

        <div class="page-header">
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="clearfix">
                            <div class="pull-right tableTools-container"></div>
                        </div>
                        <div class="table-header">
                            Employees List
                        </div>
                        <table datatable="ng" dt-options="dtOptions" id="tbl" class="table  table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        <label class="pos-rel">
                                            #
                                        </label>
                                    </th>
                                    <th>Identify Card</th>
                                    <th>Name</th>
                                   <!-- <th>Birthday</th> -->
                                    <th>Gender</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Position</th>
                                    <th>Active</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>

                                <tr ng-repeat="x in employees" id="{{x.EmployeeID}}">
                                    <td ng-bind="$index + 1"></td>
                                    <td ng-bind="x.IdentifyCard"></td>
                                    <td>{{x.LastName}} {{x.MiddleName}} {{x.FirstName}}</td>
                                   <!-- <td>{{x.BirthDayString}}</td>-->
                                    <td>{{x.Gender?'Male':'Female'}}</td>
                                    <td ng-bind="x.Phone"></td>
                                    <td ng-bind="x.Address"></td>
                                    <td>{{x.Position == 1 ? 'Quản lý' : (x.Position == 2 ? 'Bác sĩ' : (x.Postion == 3 ? 'Nhân viên nhận bệnh' : 'Nhân viên phát thuốc'))}}</td>
                                    <td><i class="{{x.Active ? 'fa fa-check-square-o' : 'fa fa-square-o'}}" aria-hidden="true"></i></td>
                                    <td class="text-center">
                                        <button class="btn btn-danger btn-sm" ng-click="showModal(x.EmployeeID)"><i class=" fa fa-pencil-square-o"></i></button>
                                    </td>

                                </tr>

                            </tbody>

                        </table>
                        <!-- <button class="btn btn-info" ng-click="showModal(0)">Add</button>
                        </div><!-- /.span -->
                        <!-- Xử lý hiển thị số phân trang -->




                    </div><!-- /.row -->
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.page-content -->
        <!-- Modal -->
        <div id="EmployeeModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Identify Card:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="IdentifyCard" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Last Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="LastName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Middle Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="MiddleName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">First Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="FirstName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Gender:</label>
                                <div class="col-sm-9">
                                    <input type="radio" ng-model="Gender" value="Male" name="Gender">Male
                                    <input type="radio" ng-model="Gender" value="Female" name="Gender">Female

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Phone:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="Phone" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Address:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="Address" />
                                </div>
                            </div>
                         <!--   <div class="form-group">
                                <label class="col-sm-3 control-label">BirthDay:</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" ng-model="BirthDay" value="{{BirthDay}}"/>
                                </div>
                            </div>-->
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Position:</label>
                                <div class="col-sm-9">
                                    <select ng-model="Position" ng-options="y.position for (x,y) in positions" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" ng-click="saveData()" id="btnAddAction">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

