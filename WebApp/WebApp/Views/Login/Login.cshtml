@model WebApp.Models.LoginVM

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Sign in</title>
</head>
<body class="p-t-100 bg-doctor full-height">

    <div class="container">
        <p class="p-60 m-b-30 text-center">Log In</p>
        <div class="form-horizontal" >
            @using (Html.BeginForm("LogIn", "Login"))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Đăng nhập không thành công, kiểm tra lại thông tin")
                <div class="form-group m-b-30">
                    <div class="col-xs-4 text-right">
                        <label for="userID" class="control-label">UserID</label>
                    </div>
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group m-b-30">
                    <label for="pass" class="col-xs-4 text-right control-label">Password</label>
                    <div class="col-xs-6">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4"></div>
                    <div class=" col-xs-8">
                        <button id="btn-login" type="submit" class="btn btn-info f-20">Sign in</button>
                    </div>
                </div>
                }
            </div>
    </div>
</body>
</html>