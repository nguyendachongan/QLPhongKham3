@model WebApp.Models.LoginVM

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Sign in</title>
</head>
<body style="background-color:black">

    <div class="container">
        <div style="color:white;text-align:center;font-size:60px;margin-top:15%;font-family:'Century Gothic'">Log In</div>
        <div class="form-horizontal" style="margin-top:2%;text-align:center;color:white;font-family:Tahoma">
            @using (Html.BeginForm("LogIn", "Login"))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Đăng nhập không thành công, kiểm tra lại thông tin")
                <div class="form-group" style="margin-left: 15%;">
                    <label for="userID" class="col-md-3 control-label">UserID</label>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group" style="margin-left: 15%;">
                    <label for="pass" class="col-md-3 control-label">Password</label>
                    <div class="col-md-7">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-default">Sign in</button>
                </div>
            }
        </div>
    </div>
</body>
</html>